<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Desserts</title>
</head>
<body>
    <%- include('../partials/_navbar.ejs') %>
    <h1>Full Menu</h1>
    <% desserts.forEach(dessert => { %>
        <div class="itemCard">
            <h3><%= dessert.itemName %> - <%= dessert.price %></h3>
            <p><%= dessert.description %></p>
            <a href="/menuitems/<%= user._id %>/<%= dessert._id %>/edit">Edit Item</a>
            <form action="/menuitems/<%= user._id %>/<%= dessert._id %>/delete?_method=DELETE" method="POST">
                <button type="submit">Delete Item</button>
            </form>
        </div>
    <% }) %>
</body>
</html>