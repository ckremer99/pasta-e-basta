<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Pizzas</title>
    <link rel="stylesheet" href="/stylesheets/style.css" />
</head>
<body>
    <%- include('../partials/_navbar.ejs') %>
    <h1>Pizzas</h1>
    <% pizzas.forEach(pizza => { %>
        <div class="itemCard">
            <h3><%= pizza.itemName %> - <%= pizza.price %></h3>
            <p><%= pizza.description %></p>
            <a href="/menuitems/<%= user._id %>/<%= pizza._id %>/edit">Edit Item</a>
            <form action="/menuitems/<%= user._id %>/<%= pizza._id %>/delete?_method=DELETE" method="POST">
                <button type="submit" id="delete-button">Delete Item</button>
            </form>
        </div>
    <% }) %>
</body>
</html>