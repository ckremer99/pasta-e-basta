<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Pizzas</title>
</head>
<body>
    <%- include('../partials/_navbar.ejs') %>
    <h1>Full Menu</h1>
    <% pastas.forEach(pasta => { %>
        <div class="itemCard">
            <h3><%= pasta.itemName %> - <%= pasta.price %></h3>
            <p><%= pasta.description %></p>
            <a href="/menuitems/<%= user._id %>/<%= pasta._id %>/edit">Edit Item</a>
        </div>
    <% }) %>
</body>
</html>